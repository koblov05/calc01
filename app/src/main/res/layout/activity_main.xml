<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:text="@string/tip"
        android:padding="16dp"
        android:gravity="bottom|right"
        android:textSize="24dp"
        android:id="@+id/formula"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_ac"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6sp"
            android:backgroundTint="@color/button_green"
            android:text="@string/reset_button"
            android:tag="AC"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_left_brace"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:layout_margin="6sp"
            android:text="@string/left_brace_button"
            android:tag="("
            android:backgroundTint="@color/button_teal"
            />

        <Button
            android:id="@+id/button_right_brace"
            android:layout_width="wrap_content"
            android:layout_margin="6sp"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:text="@string/right_brace_button"
            android:tag=")"
            android:backgroundTint="@color/button_teal"
            />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="wrap_content"
            android:textSize="40sp"
            android:layout_margin="6sp"
            android:layout_height="match_parent"
            android:text="@string/plus_button"
            android:tag="+"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/button_7"
            android:layout_width="wrap_content"
            android:textSize="40sp"
            android:layout_height="match_parent"
            android:text="@string/seven_button"
            android:tag="7"
            android:layout_margin="6sp"
            android:backgroundTint="@color/space_gray"
             />

        <Button
            android:id="@+id/button_8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6sp"
            android:backgroundTint="@color/space_gray"
            android:tag="8"
            android:text="@string/eight_button"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6sp"
            android:backgroundTint="@color/space_gray"
            android:tag="9"
            android:text="@string/nine_button"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:text="@string/minus_button"
            android:tag="-"
            android:layout_margin="6sp"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6sp"
            android:textSize="40sp"
            android:text="@string/four_button"
            android:tag="4"
            android:backgroundTint="@color/space_gray" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6sp"
            android:textSize="40sp"
            android:text="@string/five_button"
            android:tag="5"
            android:backgroundTint="@color/space_gray"  />

        <Button
            android:id="@+id/button_6"
            android:layout_width="wrap_content"
            android:textSize="40sp"
            android:layout_height="match_parent"
            android:layout_margin="6sp"
            android:text="@string/six_button"
            android:tag="6"
            android:backgroundTint="@color/space_gray" />

        <Button
            android:id="@+id/button_div"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:layout_margin="6sp"
            android:text="@string/div_button"
            android:tag="/"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6sp"
            android:textSize="40sp"
            android:text="@string/one_button"
            android:tag="1"
            android:backgroundTint="@color/space_gray"
            />

        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="40sp"
            android:layout_margin="6sp"
            android:text="@string/two_button"
            android:tag="2"
            android:backgroundTint="@color/space_gray"
            />

        <Button
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/three_button"
            android:tag="3"
            android:textSize="40sp"
            android:layout_margin="6sp"
            android:backgroundTint="@color/space_gray"
            />

        <Button
            android:id="@+id/button_multiplication"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/mult_button"
            android:tag="*"
            android:textSize="40sp"
            android:layout_margin="6sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/button_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6sp"
            android:textSize="40sp"
            android:text="@string/zero_button"
            android:tag="0"
            android:backgroundTint="@color/space_gray"
            />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/point_button"
            android:tag=","
            android:textSize="40sp"
            android:layout_margin="6sp"
            android:backgroundTint="@color/space_gray"
            />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6sp"
            android:text="@string/equal_button"
            android:tag="="
            android:textSize="40sp"
            />

        <Button
            android:id="@+id/button_demolition"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="6sp"
            android:text="@string/demolition_button"
            android:tag="del"
            android:textSize="18sp"
            android:backgroundTint="@color/button_red"
            />

    </LinearLayout>
</LinearLayout>